<div class="row justify-content-center">
  <div class="col-lg-4 col-md-6">
    <h1 class="text-center"><%= t('views.users.create.title') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field mb-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autocomplete: 'name', class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autocomplete: 'name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <em class="font-size-small">(<%= @minimum_password_length %> <%= t('views.users.password.edit.limit') %>)</em>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group mt-2">
        <%= f.submit t('views.users.create.action'), class: "btn btn-primary btn-block btn-lg", data: { turbo: false } %>
      </div>
    <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>